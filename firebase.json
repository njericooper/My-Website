{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [ 
    {
    "target": "main",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],  
    "cleanUrls": true
  }, 
  { 
  "target": "book",
  "public": "public/book", 
  "rewrites": [
    { 
    "source": "**",
    "destination": "/index.html"
    }
  ]
  },
  {
    "headers": [
     {
      "source": "**/*.@(html)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
          },
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
            }

      ]
     }
    ]
  }
]
}
