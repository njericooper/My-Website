{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [ 
    {
    "target": "main",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ], "headers": [
      {
       "source": "**/*",
       "headers": [
         {
           "key": "X-Frame-Options",
           "value": "SAMEORIGIN"
          },
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          { 
            "key": "Referrer-Policy",
            "value": "same-origin"
          },
          { 
            "key": "Permissions-Policy",
            "value": "geolocation=(self 'https://njeri.codes'), microphone=()"
          },
          { 
            "key": "X-XSS-Protection",
            "value": "1"
          },
          { 
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          { 
            "key": "Content-Security-Policy-Report-Only",
            "value": "default-src https:; report-uri /csp-violation-report-endpoint/"
          },
          { 
            "key": "Content-Security-Policy",
            "value": "default-src https: 'unsafe-eval' 'unsafe-inline'; object-src 'none'"
          }

       ]
      }
     ], 
    "cleanUrls": true
  }, 
  { 
  "target": "book",
  "public": "public/book", 
  "rewrites": [
    { 
    "source": "**",
    "destination": "/index.html"
    }
  ]
  }
]
}
