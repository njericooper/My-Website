{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": [ 
    {
    "target": "main",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ], "headers": [
      {
       "source": "**/*.@(html)",
       "headers": [
         {
           "key": "X-Frame-Options",
           "value": "SAMEORIGIN"
           },
           {
             "key": "Cache-Control",
             "value": "max-age=3600"
             }
       ]
      },
      {
       "source": "**/*",
       "headers": [
           {
               "key": "X-Content-Type-Options",
               "value": "nosniff"
           }
       ]
   }
     ], 
    "cleanUrls": true
  }, 
  { 
  "target": "book",
  "public": "public/book", 
  "rewrites": [
    { 
    "source": "**",
    "destination": "/index.html"
    }
  ]
  }
]
}
